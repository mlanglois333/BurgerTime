<h1>It's Burger Time</h1>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Burgers I Want</h2>
        </div>
        <div class="col-6">
            <h2>Burgers I Had</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}

            </ul>
        </div>
    </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="newBurger">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Not Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
